<div id="myModal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Confirmation</h4>
        </div>
        <div class="modal-body">
          <p>Select Payment Option</p>
          <p><%=title%></p>
          <% if order.currency == 'usd'%>
            <p class="amount"><%=order.amount%></p>
            <div class='row'>
              <div class = "span3">
                <p> PayUmoney</p>
                <%=link_to 'Buy now via PayUmoney','#', class: 'btn btn-default'%>
                  <%=image_tag('payumoney.png') %>
              </div>
              <div class = "span2">
                <p> Paytm</p>
                <%=link_to 'Buy now via paypal','#', class: 'btn btn-default'%>
                  <%=image_tag('paytm.jpg') %>
              </div>
              <div class = "span2">
                <p> CC avenue </p>
                <%=link_to 'Buy now via ccavenue',order_path(order), class: 'btn btn-default'%>
                  <%=image_tag('ccavenue_home_logo.gif') %>
              </div>
            </div>
          <%else%>
            <p><span>$</span><%=order.amount%></p>
            <div class='row'>
              <div class = "span2">
                <p> Paypal</p>
                <%=link_to 'Buy now via paypal',order_path(order), class: 'btn btn-default'%>
                  <%=image_tag('paypal_logo.gif') %>
              </div>
              <div class = "span2">
                <p> CC avenue </p>
                <%=link_to 'Buy now via ccavenue',order_path(order), class: 'btn btn-default'%>
                  <%=image_tag('ccavenue_home_logo.gif') %>
              </div>
            </div>
          <%end%>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</div>